---
import BaseLayout from "../layouts/BaseLayout.astro";
import ArchivePostList from "../layouts/ArchivePostList.astro";
---

<BaseLayout primaryTitle="404 Not Found">
  <section class="archive">
    <div class="section-content section-tag">
      <div class="archive-tag">
        <div class="tag-header">
          <input type="checkbox">
          😅很抱歉，展览全部作品集的列表页没做，下次一定😅
        </div>
        <div class="tag-post-list">将鼠标移动到右上角&nbsp&nbsp&nbsp
          <span class="tag-post-list-text">作品集👇</span>
          &nbsp&nbsp有作品列表信息 </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* 初始状态 */
.archive-tag{
  text-align: center;
  margin-bottom: 35px;
  font-size: 28px;
  font-weight: 500; /* 加粗字体 */
  opacity: 0;
  transform: translateY(50px);
  animation: fadeInUp 1s ease forwards;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(50px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.tag-header{
  margin: 20px 20px 30px 20px;
}
.archive-tag{
  font-size: 20px;
}
.tag-post-list-text{
  color: rgb(79, 124, 221);
}
</style>
